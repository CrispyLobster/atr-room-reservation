/**app.wxss**/
page {
	background-color: #f5f5f5;
	font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC',
		'Microsoft YaHei', Arial, sans-serif;
	font-size: 14px;
	color: #333333;
	line-height: 1.6;
}

/* 标题样式 */
.title {
	font-size: 18px;
	font-weight: bold;
	color: #333333;
	margin-bottom: 10px;
}

.sub-title {
	font-size: 16px;
	font-weight: bold;
	color: #333333;
	margin-bottom: 8px;
}

/* 辅助文字 */
.desc-text {
	font-size: 12px;
	color: #999999;
}

/* 容器通用样式 */
.container {
	padding: 20rpx;
	box-sizing: border-box;
}

.card {
	background-color: #ffffff;
	border-radius: 10rpx;
	padding: 20rpx;
	margin-bottom: 20rpx;
	box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn-primary {
	background-color: #3a5fcd;
	color: #ffffff;
	border: none;
	border-radius: 5rpx;
	padding: 20rpx 0;
	font-size: 14px;
	font-weight: 500;
	text-align: center;
}

.btn-secondary {
	background-color: #f5f5f5;
	color: #666666;
	border: 1rpx solid #dddddd;
	border-radius: 5rpx;
	padding: 20rpx 0;
	font-size: 14px;
	font-weight: 500;
	text-align: center;
}

.btn-accent {
	background-color: #ff8c00;
	color: #ffffff;
	border: none;
	border-radius: 5rpx;
	padding: 20rpx 0;
	font-size: 14px;
	font-weight: 500;
	text-align: center;
}

/* 表单元素 */
.form-group {
	margin-bottom: 20rpx;
}

.form-label {
	font-size: 14px;
	color: #333333;
	margin-bottom: 10rpx;
	display: block;
}

.form-input {
	width: 100%;
	height: 80rpx;
	background-color: #ffffff;
	border: 1rpx solid #dddddd;
	border-radius: 5rpx;
	padding: 0 20rpx;
	box-sizing: border-box;
	font-size: 14px;
}

/* 预约时间段样式 */
.time-slot {
	padding: 20rpx;
	margin-bottom: 10rpx;
	border-radius: 5rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
}

.time-slot-available {
	background-color: #ffffff;
	border: 1rpx solid #dddddd;
}

.time-slot-booked {
	background-color: #f0f0f0;
	color: #999999;
}

.time-slot-mine {
	background-color: rgba(58, 95, 205, 0.1);
	border: 1rpx solid #3a5fcd;
}

/* 预约状态标签 */
.status-tag {
	display: inline-block;
	padding: 4rpx 12rpx;
	border-radius: 4rpx;
	font-size: 12px;
}

.status-pending {
	background-color: rgba(255, 140, 0, 0.1);
	color: #ff8c00;
}

.status-completed {
	background-color: rgba(76, 175, 80, 0.1);
	color: #4caf50;
}

.status-canceled {
	background-color: rgba(244, 67, 54, 0.1);
	color: #f44336;
}
