.login-container {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	height: 100vh;
	padding: 100rpx 50rpx;
	box-sizing: border-box;
	background-color: #ffffff;
}

.logo-area {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-top: 60rpx;
}

.logo-text {
	font-size: 36px;
	font-weight: bold;
	color: #3a5fcd;
	margin-bottom: 40rpx;
	text-align: center;
}

.welcome {
	font-size: 28px;
	font-weight: bold;
	color: #3a5fcd;
	margin-bottom: 20rpx;
	text-align: center;
}

.slogan {
	font-size: 14px;
	color: #999999;
	text-align: center;
}

.login-area {
	width: 100%;
	margin-top: 80rpx;
}

.btn-login {
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	background-color: #3a5fcd;
	color: #ffffff;
	border-radius: 45rpx;
	font-size: 16px;
	margin-bottom: 30rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.agreement {
	display: flex;
	justify-content: center;
	font-size: 12px;
	color: #999999;
	margin-top: 20rpx;
}

.agreement-text {
	color: #999999;
}

.agreement-link {
	color: #3a5fcd;
}
