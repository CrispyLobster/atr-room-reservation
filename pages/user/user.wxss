.container {
	display: flex;
	flex-direction: column;
	align-items: center;
	min-height: 100vh;
	background-color: #f5f5f5;
	padding: 0;
}

.user-card {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 40rpx 0;
	background-color: #ffffff;
}

.user-info {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.avatar-placeholder {
	width: 150rpx;
	height: 150rpx;
	border-radius: 75rpx;
	margin-bottom: 20rpx;
	background-color: #3a5fcd;
	color: #ffffff;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 60rpx;
	font-weight: bold;
}

.user-name {
	font-size: 18px;
	font-weight: bold;
	color: #333333;
}

/* 菜单列表样式 */
.menu-list {
	width: 100%;
	margin-top: 30rpx;
	background-color: #ffffff;
}

.menu-item {
	width: 100%;
	height: 100rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 30rpx;
	border-bottom: 1rpx solid #eeeeee;
	box-sizing: border-box;
}

.menu-item-left {
	display: flex;
	align-items: center;
}

.dot {
	width: 16rpx;
	height: 16rpx;
	border-radius: 8rpx;
	background-color: #3a5fcd;
	margin-right: 20rpx;
}

.menu-text {
	font-size: 16px;
	color: #333333;
}

.arrow {
	width: 15rpx;
	height: 15rpx;
	border-top: 2rpx solid #999999;
	border-right: 2rpx solid #999999;
	transform: rotate(45deg);
}

/* 退出登录按钮样式 */
.logout-container {
	width: 100%;
	margin-top: 60rpx;
	padding: 0 30rpx;
	box-sizing: border-box;
}

.btn-logout {
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	background-color: #f44336;
	color: #ffffff;
	border-radius: 45rpx;
	font-size: 16px;
	text-align: center;
	display: flex;
	align-items: center;
	justify-content: center;
}
