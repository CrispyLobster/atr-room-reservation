<view class="container">
     <!-- 用户信息卡片 -->
     <view class="user-card">
          <view class="user-info">
               <view class="avatar-placeholder">
                    {{userInfo.nickName ? userInfo.nickName.substr(0,1) : '用'}}
               </view>
               <view class="user-name">{{userInfo.nickName || '微信用户'}}</view>
          </view>
     </view>
     <!-- 功能列表 -->
     <view class="menu-list">
          <view class="menu-item" bindtap="goToMyAppointments">
               <view class="menu-item-left">
                    <view class="dot"></view>
                    <text class="menu-text">我的预约</text>
               </view>
               <view class="arrow"></view>
          </view>
          <view class="menu-item" bindtap="goToUserInfo">
               <view class="menu-item-left">
                    <view class="dot"></view>
                    <text class="menu-text">个人信息</text>
               </view>
               <view class="arrow"></view>
          </view>
          <view class="menu-item" bindtap="goToSettings">
               <view class="menu-item-left">
                    <view class="dot"></view>
                    <text class="menu-text">设置</text>
               </view>
               <view class="arrow"></view>
          </view>
     </view>
     <!-- 退出登录按钮 -->
     <view class="logout-container">
          <button class="btn-logout" bindtap="logout">退出登录</button>
     </view>
</view>