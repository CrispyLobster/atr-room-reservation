.container {
	padding: 20rpx;
	box-sizing: border-box;
}

.title {
	font-size: 18px;
	font-weight: bold;
	margin: 20rpx 0 30rpx;
}

.settings-list {
	width: 100%;
	background-color: #ffffff;
	border-radius: 10rpx;
	overflow: hidden;
	box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.settings-item {
	width: 100%;
	height: 100rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 30rpx;
	border-bottom: 1rpx solid #eeeeee;
	box-sizing: border-box;
}

.settings-item:last-child {
	border-bottom: none;
}

.settings-text {
	font-size: 16px;
	color: #333333;
}

.arrow {
	width: 15rpx;
	height: 15rpx;
	border-top: 2rpx solid #999999;
	border-right: 2rpx solid #999999;
	transform: rotate(45deg);
}

.version-info {
	width: 100%;
	display: flex;
	justify-content: center;
	margin-top: 80rpx;
}

.version-text {
	font-size: 14px;
	color: #999999;
}
